<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="284dp"
    android:layout_height="186dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <RelativeLayout
        android:id="@+id/card_item_border"
        android:layout_width="264dp"
        android:layout_height="166dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/card_item_black">

        <ImageView
            android:id="@+id/card_item_image_view"
            android:layout_width="264dp"
            android:layout_height="166dp"
            android:background="@drawable/destination_card"/>

        <TextView
            android:id="@+id/card_item_destination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dest_card_point_value"
            style="@style/PointsText"
            android:layout_width="58dp"
            android:layout_height="54dp"
            android:layout_marginStart="184dp"
            android:layout_marginTop="88dp"
            android:gravity="center_vertical"
            android:textAlignment="center" />


    </RelativeLayout>

</LinearLayout>