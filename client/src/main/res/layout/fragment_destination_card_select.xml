<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">


    <TextView
        android:id="@+id/dest_card_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        style="@style/TitleText"
        android:text="RAWRRAWRRRRR"/>

    <TextView
        android:id="@+id/dest_card_frag_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/dest_card_frag_title"
        style="@style/SubtitleText"
        android:text="SUBTITLE"/>

    <LinearLayout
        android:id="@+id/dest_card_frag_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/dest_card_frag_subtitle"
        android:layout_above="@id/dest_card_frag_select_cards"
        android:weightSum="3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/GreenTrain"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/GreenTrain"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/GreenTrain"
            android:layout_weight="1"/>


    </LinearLayout>

    <Button
        android:id="@+id/dest_card_frag_select_cards"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>