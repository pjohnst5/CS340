<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/train_black_border" />
            <gradient android:angle="-90" android:startColor="@color/train_light_red_disabled" android:endColor="@color/train_light_red_disabled"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/blue" />
            <gradient android:angle="-90" android:startColor="@color/train_light_red" android:endColor="@color/train_light_red" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke android:width="2dp" android:color="@color/train_black_border" />
            <gradient android:angle="-90" android:gradientRadius="120dp" android:startColor="@color/train_light_red" android:endColor="@color/train_light_red" />

        </shape>
    </item>

</selector>