<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/train_card_green" android:state_pressed="true">
        <shape android:shape="rectangle" >
            <stroke android:width="1dp" android:color="@color/train_black_border" />
        </shape>
    </item>

    <item android:drawable="@drawable/train_card_green" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="50dp" android:color="@color/blue" />
        </shape>
    </item>

</selector>